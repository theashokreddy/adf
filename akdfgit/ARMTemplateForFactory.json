{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"factoryName": {
			"type": "string",
			"metadata": "Data Factory name",
			"defaultValue": "akdfgit"
		},
		"adlsLoans_accountKey": {
			"type": "secureString",
			"metadata": "Secure string for 'accountKey' of 'adlsLoans'"
		},
		"loansAdls_accountKey": {
			"type": "secureString",
			"metadata": "Secure string for 'accountKey' of 'loansAdls'"
		},
		"loansBlob_connectionString": {
			"type": "secureString",
			"metadata": "Secure string for 'connectionString' of 'loansBlob'"
		},
		"adlsLoans_properties_typeProperties_url": {
			"type": "string",
			"defaultValue": "https://bankadls.dfs.core.windows.net/"
		},
		"loansAdls_properties_typeProperties_url": {
			"type": "string",
			"defaultValue": "https://bankadls.dfs.core.windows.net/"
		}
	},
	"variables": {
		"factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]"
	},
	"resources": [
		{
			"name": "[concat(parameters('factoryName'), '/loanAgg')]",
			"type": "Microsoft.DataFactory/factories/pipelines",
			"apiVersion": "2018-06-01",
			"properties": {
				"activities": [
					{
						"name": "dfLoanAgg",
						"type": "ExecuteDataFlow",
						"dependsOn": [],
						"policy": {
							"timeout": "0.12:00:00",
							"retry": 0,
							"retryIntervalInSeconds": 30,
							"secureOutput": false,
							"secureInput": false
						},
						"userProperties": [],
						"typeProperties": {
							"dataflow": {
								"referenceName": "DFLoanAgg",
								"type": "DataFlowReference",
								"parameters": {},
								"datasetParameters": {
									"srcLoans": {},
									"srcAccounts": {},
									"tgtAggLoans": {}
								}
							},
							"staging": {},
							"integrationRuntime": {
								"referenceName": "IRPractice",
								"type": "IntegrationRuntimeReference"
							},
							"traceLevel": "Fine"
						}
					}
				],
				"policy": {
					"elapsedTimeMetric": {}
				},
				"annotations": []
			},
			"dependsOn": [
				"[concat(variables('factoryId'), '/dataflows/DFLoanAgg')]",
				"[concat(variables('factoryId'), '/integrationRuntimes/IRPractice')]"
			]
		},
		{
			"name": "[concat(parameters('factoryName'), '/accounts')]",
			"type": "Microsoft.DataFactory/factories/datasets",
			"apiVersion": "2018-06-01",
			"properties": {
				"linkedServiceName": {
					"referenceName": "loansBlob",
					"type": "LinkedServiceReference"
				},
				"annotations": [],
				"type": "DelimitedText",
				"typeProperties": {
					"location": {
						"type": "AzureBlobStorageLocation",
						"fileName": "completedacct.csv",
						"folderPath": "lpetrocelli-retail-banking-demo-data",
						"container": "jul2024"
					},
					"columnDelimiter": ",",
					"escapeChar": "\\",
					"firstRowAsHeader": true,
					"quoteChar": "\""
				},
				"schema": [
					{
						"name": "account_id",
						"type": "String"
					},
					{
						"name": "district_id",
						"type": "String"
					},
					{
						"name": "frequency",
						"type": "String"
					},
					{
						"name": "parseddate",
						"type": "String"
					},
					{
						"name": "year",
						"type": "String"
					},
					{
						"name": "month",
						"type": "String"
					},
					{
						"name": "day",
						"type": "String"
					}
				]
			},
			"dependsOn": [
				"[concat(variables('factoryId'), '/linkedServices/loansBlob')]"
			]
		},
		{
			"name": "[concat(parameters('factoryName'), '/aggLoans')]",
			"type": "Microsoft.DataFactory/factories/datasets",
			"apiVersion": "2018-06-01",
			"properties": {
				"linkedServiceName": {
					"referenceName": "loansAdls",
					"type": "LinkedServiceReference"
				},
				"annotations": [],
				"type": "Parquet",
				"typeProperties": {
					"location": {
						"type": "AzureBlobFSLocation",
						"fileSystem": "loansprocessed"
					},
					"compressionCodec": "snappy"
				},
				"schema": []
			},
			"dependsOn": [
				"[concat(variables('factoryId'), '/linkedServices/loansAdls')]"
			]
		},
		{
			"name": "[concat(parameters('factoryName'), '/loans')]",
			"type": "Microsoft.DataFactory/factories/datasets",
			"apiVersion": "2018-06-01",
			"properties": {
				"linkedServiceName": {
					"referenceName": "loansBlob",
					"type": "LinkedServiceReference"
				},
				"annotations": [],
				"type": "DelimitedText",
				"typeProperties": {
					"location": {
						"type": "AzureBlobStorageLocation",
						"fileName": "completedloan.csv",
						"folderPath": "lpetrocelli-retail-banking-demo-data",
						"container": "jul2024"
					},
					"columnDelimiter": ",",
					"escapeChar": "\\",
					"firstRowAsHeader": true,
					"quoteChar": "\""
				},
				"schema": [
					{
						"name": "loan_id",
						"type": "String"
					},
					{
						"name": "account_id",
						"type": "String"
					},
					{
						"name": "amount",
						"type": "String"
					},
					{
						"name": "duration",
						"type": "String"
					},
					{
						"name": "payments",
						"type": "String"
					},
					{
						"name": "status",
						"type": "String"
					},
					{
						"name": "year",
						"type": "String"
					},
					{
						"name": "month",
						"type": "String"
					},
					{
						"name": "day",
						"type": "String"
					},
					{
						"name": "fulldate",
						"type": "String"
					},
					{
						"name": "location",
						"type": "String"
					},
					{
						"name": "purpose",
						"type": "String"
					}
				]
			},
			"dependsOn": [
				"[concat(variables('factoryId'), '/linkedServices/loansBlob')]"
			]
		},
		{
			"name": "[concat(parameters('factoryName'), '/adlsLoans')]",
			"type": "Microsoft.DataFactory/factories/linkedServices",
			"apiVersion": "2018-06-01",
			"properties": {
				"annotations": [],
				"type": "AzureBlobFS",
				"typeProperties": {
					"url": "[parameters('adlsLoans_properties_typeProperties_url')]",
					"accountKey": {
						"type": "SecureString",
						"value": "[parameters('adlsLoans_accountKey')]"
					}
				}
			},
			"dependsOn": []
		},
		{
			"name": "[concat(parameters('factoryName'), '/loansAdls')]",
			"type": "Microsoft.DataFactory/factories/linkedServices",
			"apiVersion": "2018-06-01",
			"properties": {
				"annotations": [],
				"type": "AzureBlobFS",
				"typeProperties": {
					"url": "[parameters('loansAdls_properties_typeProperties_url')]",
					"accountKey": {
						"type": "SecureString",
						"value": "[parameters('loansAdls_accountKey')]"
					}
				}
			},
			"dependsOn": []
		},
		{
			"name": "[concat(parameters('factoryName'), '/loansBlob')]",
			"type": "Microsoft.DataFactory/factories/linkedServices",
			"apiVersion": "2018-06-01",
			"properties": {
				"annotations": [],
				"type": "AzureBlobStorage",
				"typeProperties": {
					"connectionString": "[parameters('loansBlob_connectionString')]"
				}
			},
			"dependsOn": []
		},
		{
			"name": "[concat(parameters('factoryName'), '/IRPractice')]",
			"type": "Microsoft.DataFactory/factories/integrationRuntimes",
			"apiVersion": "2018-06-01",
			"properties": {
				"type": "Managed",
				"typeProperties": {
					"computeProperties": {
						"location": "East US",
						"dataFlowProperties": {
							"computeType": "General",
							"coreCount": 8,
							"timeToLive": 10,
							"cleanup": false,
							"customProperties": []
						},
						"pipelineExternalComputeScaleProperties": {
							"timeToLive": 10,
							"numberOfPipelineNodes": 1,
							"numberOfExternalNodes": 1
						}
					}
				},
				"managedVirtualNetwork": {
					"type": "ManagedVirtualNetworkReference",
					"referenceName": "default"
				}
			},
			"dependsOn": [
				"[concat(variables('factoryId'), '/managedVirtualNetworks/default')]"
			]
		},
		{
			"name": "[concat(parameters('factoryName'), '/DFLoanAgg')]",
			"type": "Microsoft.DataFactory/factories/dataflows",
			"apiVersion": "2018-06-01",
			"properties": {
				"type": "MappingDataFlow",
				"typeProperties": {
					"sources": [
						{
							"dataset": {
								"referenceName": "loans",
								"type": "DatasetReference"
							},
							"name": "srcLoans"
						},
						{
							"dataset": {
								"referenceName": "accounts",
								"type": "DatasetReference"
							},
							"name": "srcAccounts"
						}
					],
					"sinks": [
						{
							"dataset": {
								"referenceName": "aggLoans",
								"type": "DatasetReference"
							},
							"name": "tgtAggLoans"
						}
					],
					"transformations": [
						{
							"name": "ftrLoans"
						},
						{
							"name": "jnr1"
						},
						{
							"name": "aggLoans"
						}
					],
					"scriptLines": [
						"source(output(",
						"          loan_id as string,",
						"          account_id as string,",
						"          amount as string,",
						"          duration as string,",
						"          payments as string,",
						"          status as string,",
						"          year as string,",
						"          month as string,",
						"          day as string,",
						"          fulldate as string,",
						"          location as string,",
						"          purpose as string",
						"     ),",
						"     allowSchemaDrift: true,",
						"     validateSchema: false,",
						"     ignoreNoFilesFound: false,",
						"     skipLines: 1) ~> srcLoans",
						"source(output(",
						"          account_id as string,",
						"          district_id as string,",
						"          frequency as string,",
						"          parseddate as string,",
						"          year as string,",
						"          month as string,",
						"          day as string",
						"     ),",
						"     allowSchemaDrift: true,",
						"     validateSchema: false,",
						"     ignoreNoFilesFound: false,",
						"     skipLines: 1) ~> srcAccounts",
						"srcLoans filter(in(['A','C'],status)) ~> ftrLoans",
						"ftrLoans, srcAccounts join(srcLoans@account_id == srcAccounts@account_id,",
						"     joinType:'inner',",
						"     matchType:'exact',",
						"     ignoreSpaces: false,",
						"     broadcast: 'auto')~> jnr1",
						"jnr1 aggregate(groupBy(district_id),",
						"     amount = sum(toInteger(amount))) ~> aggLoans",
						"aggLoans sink(allowSchemaDrift: true,",
						"     validateSchema: false,",
						"     format: 'parquet',",
						"     umask: 0022,",
						"     preCommands: [],",
						"     postCommands: [],",
						"     skipDuplicateMapInputs: true,",
						"     skipDuplicateMapOutputs: true,",
						"     saveOrder: 1) ~> tgtAggLoans"
					]
				}
			},
			"dependsOn": [
				"[concat(variables('factoryId'), '/datasets/loans')]",
				"[concat(variables('factoryId'), '/datasets/accounts')]",
				"[concat(variables('factoryId'), '/datasets/aggLoans')]"
			]
		},
		{
			"name": "[concat(parameters('factoryName'), '/default')]",
			"type": "Microsoft.DataFactory/factories/managedVirtualNetworks",
			"apiVersion": "2018-06-01",
			"properties": {},
			"dependsOn": []
		}
	]
}